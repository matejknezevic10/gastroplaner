// ==========================================
// FIREBASE SECURITY RULES für Multi-Tenancy
// Jedes Restaurant (Tenant) sieht nur seine eigenen Daten
// ==========================================

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    // Prüfe ob User eingeloggt ist (später mit Authentication)
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Prüfe ob Request vom richtigen Tenant kommt
    function isTenantOwner(tenantId) {
      // Für Entwicklung: Jeder darf zugreifen
      // Für Produktion: Muss mit Authentication kombiniert werden
      return true;
    }
    
    // ==========================================
    // TENANT DOKUMENTE (Top-Level)
    // ==========================================
    
    match /tenants/{tenantId} {
      // READ: Jeder Tenant kann nur sein eigenes Dokument lesen
      allow read: if isTenantOwner(tenantId);
      
      // CREATE: Neue Tenants können erstellt werden (Registrierung)
      allow create: if true;
      
      // UPDATE: Nur Tenant-Owner kann updaten
      allow update: if isTenantOwner(tenantId);
      
      // DELETE: Tenants können nicht gelöscht werden (nur deaktiviert)
      allow delete: if false;
      
      // ==========================================
      // SUB-COLLECTIONS (Tenant-spezifische Daten)
      // ==========================================
      
      // Alle Sub-Collections: Nur Tenant-Owner hat Zugriff
      match /{collection}/{document=**} {
        // READ: Nur eigene Daten lesen
        allow read: if isTenantOwner(tenantId);
        
        // WRITE: Nur eigene Daten schreiben
        allow write: if isTenantOwner(tenantId);
      }
    }
    
    // ==========================================
    // KEINE ANDEREN ZUGRIFFE ERLAUBT
    // ==========================================
    
    // Alles andere ist verboten
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

